/* 页面容器样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f9f9f9;
}

/* 内容部分 */
.content {
  flex: 1;
  padding: 20px;
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
  margin-top: 20px;
}

/* 页面标题 */
.header {
  margin-bottom: 20px;
  text-align: center;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

/* 当前预约状态信息框 */
.appointment-status {
  margin-top: 20px;
  padding: 10px;
  background-color: #f0f8ff;
  border-radius: 8px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.status-title {
  font-size: 16px;
  color: #007aff;
  font-weight: bold;
}

.status-text {
  font-size: 14px;
  color: #666;
  margin-top: 10px;
}

/* 预约按钮样式 */
.reserve-btn {
  width: 100%;
  height: 48px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 24px;
  font-size: 18px;
  margin-top: 30px;
}

/* 签到按钮样式 */
.sign-in-btn {
  width: 100%;
  height: 48px;
  background-color: #34c759;
  color: white;
  border: none;
  border-radius: 24px;
  font-size: 18px;
  margin-top: 20px;
}

/* 预约说明 */
.reserve-info {
  margin-top: 20px;
  text-align: center;
  font-size: 14px;
  color: #888;
}

/* 底部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-around;
  width: 100%;  /* Ensure the navbar spans the full width of the screen */
  padding: 10px 0;  /* Adjust the padding to ensure it's not too wide */
  background-color: #2d8cf0;
  border-radius: 10px 10px 0 0;  /* Rounded corners on top, not the bottom */
  position: fixed;  /* Keep it at the bottom of the screen */
  bottom: 0;
  left: 0;
}

.nav-item {
  font-size: 16px;
  color: white;
  text-decoration: none;
  padding: 10px 15px;
  border-radius: 5px;
}

.nav-item:hover {
  background-color: #1a6db3;
  transition: background-color 0.3s;
}
