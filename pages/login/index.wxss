/* pages/login/index.wxss */
.container {
  padding: 20px;
  background-color: #f4f4f4;
}

.title {
  font-size: 24px;
  text-align: center;
  margin-bottom: 20px;
}

.identity-selector {
  margin-bottom: 20px;
}

.input-group {
  margin-bottom: 20px;
}

.input-field {
  width: 100%;
  padding: 10px;
  font-size: 16px;
  border-radius: 5px;
  border: 1px solid #ccc;
}

.login-btn {
  display: flex;
  justify-content: center;
}

button {
  padding: 12px 20px;
  font-size: 16px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}

/* 注册按钮样式 */
.register-btn {
  margin-top: 20px; /* 与登录按钮的间距 */
  text-align: center; /* 按钮居中 */
}

.register-btn button {
  background-color: #4CAF50; /* 绿色背景 */
  color: white; /* 白色文字 */
  padding: 10px 20px; /* 内边距 */
  border: none; /* 无边框 */
  border-radius: 5px; /* 圆角 */
  font-size: 16px; /* 字体大小 */
  cursor: pointer; /* 鼠标悬停时显示手型 */
}

.register-btn button:hover {
  background-color: #45a049; /* 鼠标悬停时的背景颜色 */
}