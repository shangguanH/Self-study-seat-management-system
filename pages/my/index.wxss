/* 页面整体布局 */
.container {
  padding: 20px;
  background-color: #f9f9f9;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 30px;
}

.info-title {
  font-size: 16px;
  color: #333;
  font-weight: bold;
}

.info-content {
  font-size: 16px;
  color: #555;
  margin-left: 10px;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

/* 底部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-around;
  width: 100%;  /* Ensure the navbar spans the full width of the screen */
  padding: 10px 0;  /* Adjust the padding to ensure it's not too wide */
  background-color: #2d8cf0;
  border-radius: 10px 10px 0 0;  /* Rounded corners on top, not the bottom */
  position: fixed;  /* Keep it at the bottom of the screen */
  bottom: 0;
  left: 0;
}

.nav-item {
  font-size: 16px;
  color: white;
  text-decoration: none;
  padding: 10px 15px;
  border-radius: 5px;
}

.nav-item:hover {
  background-color: #1a6db3;
  transition: background-color 0.3s;
}
