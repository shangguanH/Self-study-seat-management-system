/* 容器样式 */
.container {
  padding: 20px;
  background-color: #f5f5f5;
}

/* 标题样式 */
.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}

/* 用户身份选择样式 */
.identity-selector {
  margin-bottom: 20px;
}

.radio-label {
  margin-right: 10px;
}

/* 输入框组样式 */
.input-group {
  margin-bottom: 15px;
}

.input-group text {
  font-size: 16px;
  margin-right: 10px;
}

.input-field {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

/* 注册按钮样式 */
.register-btn {
  margin-top: 20px;
  text-align: center;
}

.register-btn button {
  background-color: #4CAF50;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
}

.register-btn button:hover {
  background-color: #45a049;
}

/* 横向布局 */
.row-align {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

/* 左侧文字 */
.label {
  width: 150rpx;
  font-size: 30rpx;
  color: #333;
}

/* picker 占据剩余宽度 */
.picker-flex {
  flex: 1;
}

/* picker 显示区域样式，重点设置背景和边框 */
.picker-inner {
  padding: 20rpx;
  background-color: #ffffff; /* 白色底 */
  border: 1px solid #dcdcdc; /* 灰色边框 */
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}
.picker-inner:active {
  background-color: #f0f0f0;
}
