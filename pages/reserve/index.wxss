/* 整体容器 */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

/* 加载和错误状态 */
.loading-container, .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text, .error-text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #666;
}

.error-text {
  color: #f5222d;
  text-align: center;
}

/* 自习室信息卡片 */
.room-info-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.room-info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.room-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.room-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  color: #fff;
}

.status-open {
  background-color: #52c41a;
}

.status-closed {
  background-color: #f5222d;
}

.room-details {
  font-size: 28rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 16rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #666;
  width: 160rpx;
}

.detail-value {
  color: #333;
  flex: 1;
}

/* 用户预约通知 */
.user-reservation-notice {
  display: flex;
  align-items: center;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
  color: #52c41a;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
}

.user-reservation-notice.warning {
  background-color: #fffbe6;
  border: 1rpx solid #ffe58f;
  color: #faad14;
}

.user-reservation-notice icon {
  margin-right: 10rpx;
}

/* 座位部分 */
.seats-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.seats-legend {
  display: flex;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.legend-color {
  width: 30rpx;
  height: 30rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
}

.legend-color.available {
  background-color: #91d5ff;
  border: 1rpx solid #1890ff;
}

.legend-color.reserved {
  background-color: #ffd8bf;
  border: 1rpx solid #ff7a45;
}

.legend-color.user-reserved {
  background-color: #b7eb8f;
  border: 1rpx solid #52c41a;
}

.seats-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.seat {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.seat.available {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 2rpx solid #91d5ff;
}

.seat.reserved {
  background-color: #fff2e8;
  color: #ff7a45;
  border: 2rpx solid #ffbb96;
}

.seat.userReserved {
  background-color: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #b7eb8f;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  z-index: 1000;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  background-color: #f8f8f8;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-body {
  padding: 30rpx 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.picker {
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  padding: 16rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.confirm-message {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  display: block;
}

.modal-footer {
  display: flex;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #eee;
}

.btn {
  flex: 1;
  padding: 16rpx 0;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

.btn-confirm {
  background-color: #1890ff;
  color: #fff;
}

.btn-danger {
  background-color: #ff4d4f;
  color: #fff;
}

  
