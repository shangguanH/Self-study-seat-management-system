/* 页面容器 */
.container {
  padding: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 自习室信息部分 */
.room-info {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.room-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.room-stats {
  display: flex;
  flex-wrap: wrap;
  font-size: 28rpx;
  color: #666;
}

.room-stats text {
  margin-right: 20rpx;
}

.feature {
  color: #3366cc;
}

/* 座位图图例 */
.seat-legend {
  display: flex;
  margin-bottom: 30rpx;
  padding: 10rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.legend-icon {
  width: 30rpx;
  height: 30rpx;
  border-radius: 6rpx;
  margin-right: 8rpx;
}

/* 座位布局图 */
.seat-layout {
  padding: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.row {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.seat {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 20rpx 40rpx rgba(6, 64, 224, 0.1);
}

.seat-available {
  background-color: #4CAF50; /* 绿色 - 可预约 */
  color: white;
}

.seat-reserved {
  background-color: #F44336; /* 红色 - 已被他人预约 */
  color: white;
}

.seat-user-reserved {
  background-color: #2196F3; /* 蓝色 - 我的预约 */
  color: white;
}

.seat-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.seat-label {
  font-size: 22rpx;
}

/* 操作按钮 */
.action-buttons {
  margin-top: 20rpx;
}

.action-buttons button {
  background-color: #3366cc;
  color: white;
}