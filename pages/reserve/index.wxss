/* Basic Seat Styles (adjust as needed) */
.seat-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 10px;
  gap: 10px; /* Adds space between seats */
}

.seat {
  width: 40px;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  font-size: 14px;
}

.seat.available {
  background-color: #e0ffe0; /* Light green */
  border-color: #a0d0a0;
}

.seat.reserved {
  background-color: #f0f0f0; /* Grey */
  border-color: #bdbdbd;
  color: #999;
  cursor: not-allowed;
}

.seat.userReserved {
  background-color: #ffdddd; /* Light red/pink */
  border-color: #ffaaaa;
  font-weight: bold;
}


/* Basic Modal Styles */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-dialog {
  background-color: white;
  border-radius: 8px;
  width: 80%;
  max-width: 400px;
  overflow: hidden;
}

.modal-title {
  padding: 15px;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  border-bottom: 1px solid #eee;
}

.modal-content {
  padding: 20px 15px;
  font-size: 16px;
}

.modal-content .form-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.modal-content .form-item text {
  width: 80px; /* Adjust as needed */
  margin-right: 10px;
}

.modal-content .picker-value {
  border: 1px solid #ccc;
  padding: 5px 10px;
  border-radius: 4px;
  flex-grow: 1; /* Allow picker value display to take remaining space */
}


.modal-footer {
  display: flex;
  border-top: 1px solid #eee;
}

.modal-button {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  font-size: 16px;
  border: none;
  background-color: transparent;
  border-radius: 0; /* Reset button radius if default button style has it */
}

.modal-button::after { /* Remove default button border */
  border: none;
}

.modal-button.cancel {
  color: #666;
  border-right: 1px solid #eee; /* Separator line */
}

.modal-button.confirm {
  color: #007aff; /* Or your theme color */
  font-weight: bold;
}
