.container {
  padding: 20rpx;
  padding-top: 60rpx; /* 添加顶部内边距，确保列表从顶部开始显示 */
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.seats-list {
  position: absolute;
  top: 200rpx;
}

.seat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.seat-id {
  font-weight: bold;
  color: #333;
}

.seat-status {
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.seat-status[data-status="已预约"] {
  background-color: #ff4d4f;
  color: white;
}

.seat-status[data-status="空闲"] {
  background-color: #52c41a;
  color: white;
}

/* 座位详情弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  background: none;
  border: none;
  font-size: 40rpx;
  cursor: pointer;
}

.modal-body {
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 15rpx;
}

.detail-item text:first-child {
  width: 200rpx;
  color: #666;
}

.detail-item text:last-child {
  flex: 1;
  color: #333;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.edit-btn, .delete-btn {
  padding: 8rpx 16rpx;
  margin-left: 10rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.edit-btn {
  background-color: #2196F3;
  color: white;
}

.delete-btn {
  background-color: #F44336;
  color: white;
}

/* 添加新座位按钮 */
.operator {
  text-align: right;
  position: absolute;
  top: 120rpx;
}

button {
  text-align: center;
  align-items: center;
}

.add-seat-btn {
  display: inline-block;
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}

/* 编辑弹窗样式 */
.form-group {
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.picker {
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  background-color: #fff;
}

.cancel-btn, .save-btn {
  padding: 8rpx 20rpx;
  margin-left: 10rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  border: 1rpx solid #ddd;
}

.save-btn {
  background-color: #4CAF50;
  color: white;
  border: none;
}