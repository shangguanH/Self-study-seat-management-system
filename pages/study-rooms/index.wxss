.container {
  padding: 20px;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.operator {
  margin-bottom: 20px;
}

.list {
  margin-top: 20px;
}

.room-item {
  padding: 10px;
  border-bottom: 1px solid #ccc;
  cursor: pointer;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 5px;
  width: 80%;
  max-width: 600px;
}

.modal-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.close-button {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
}

.modal-body {
  margin-bottom: 20px;
}

.form-item {
  margin-bottom: 15px;
}

.form-item text {
  display: block;
  margin-bottom: 5px;
}

.form-item input,
.form-item picker {
  width: 100%;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
}

.modal-footer button {
  flex: 1;
  margin: 0 5px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}

.time-picker-container {
  display: flex;
  justify-content: space-between;
}

.time-picker-container picker {
  flex: 1;
  margin: 0 5px;
}